<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorTitle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">20sp</item><!-- text size in menu-->
        <!--<item name="android:listPreferredItemHeightSmall">40dp</item>&lt;!&ndash; item size in menu&ndash;&gt;-->
        <!--<item name="listPreferredItemHeightSmall">40dp</item>&lt;!&ndash; item size in menu&ndash;&gt;-->
    </style>

    <style name="AppTheme.ProgressTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomProgressActivityTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SearchBarTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NumberPickerText">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomETStyle" parent="@android:style/Widget.EditText">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/search_selector</item>
        <!--<item name="android:textColorHint">@color/colorAccent</item>-->
        <item name="android:paddingLeft">13dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:inputType">text</item>
        <item name="android:typeface">monospace</item>

    </style>

    <style name="AppTheme.MaterialEditText">
        <!-- Customize your theme here. -->
        <item name="android:paddingLeft">13dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>

    </style>

    <style name="CustomDropDownStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/search_selector</item>

    </style>

    <style name="CustomPassETStyle" parent="CustomETStyle">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AppTheme.MaterialEditText.Password">
        <item name="fontPath">fonts/DroidKufi-Regular.ttf</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="CustomEmailETStyle" parent="CustomETStyle">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="AppTheme.MaterialEditText.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="AppTheme.MaterialEditText.Phone">
        <item name="android:inputType">phone</item>
    </style>

    <style name="AppTheme.MaterialEditText.PersonName">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTVStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomTVHeadingStyleBlack" parent="@android:style/Widget.TextView">
        <!-- Customize your theme here. -->
        <!--<item name="android:paddingLeft">0dp</item>-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BoldTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="fontPath">fonts/DroidKufi-Bold.ttf</item>
    </style>
    <style name="HeadingStyleTextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">fonts/DroidKufi-Bold.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LinkTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/CustomETStyle</item>
    </style>

</resources>
